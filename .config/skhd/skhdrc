# super + j: focus down
cmd + ctrl + alt - j : /opt/homebrew/bin/bun /Users/leonsilicon/.bun/bin/ymsp focus-down-window

# super + k: focus up
cmd + ctrl + alt - k : /opt/homebrew/bin/bun /Users/leonsilicon/.bun/bin/ymsp focus-up-window

# super + m: focus on master
cmd + ctrl + alt - m : /opt/homebrew/bin/yabai -m window --focus east

# super + shift + m: move window to master
cmd + ctrl + alt + shift - m : /opt/homebrew/bin/yabai -m window --swap east

# super + i: increase number of master windows
cmd + ctrl + alt - i : /opt/homebrew/bin/bun /Users/leonsilicon/.bun/bin/ymsp increase-master-window-count

# super + d: decrease number of master windows
cmd + ctrl + alt - d : /opt/homebrew/bin/bun /Users/leonsilicon/.bun/bin/ymsp decrease-master-window-count

# super + shift + j: move window down
cmd + ctrl + alt + shift - j : /opt/homebrew/bin/yabai -m window --swap next || /opt/homebrew/bin/yabai -m window --swap first

# super + shift + k: move window up
cmd + ctrl + alt + shift - k : /opt/homebrew/bin/yabai -m window --swap prev || /opt/homebrew/bin/yabai -m window --swap last

# super + h: resize window left
cmd + ctrl + alt - h : /opt/homebrew/bin/yabai -m window --resize right:-50:0; /opt/homebrew/bin/yabai -m window --resize left:-50:0

# super + l: resize window right
cmd + ctrl + alt - l : /opt/homebrew/bin/yabai -m window --resize right:50:0; /opt/homebrew/bin/yabai -m window --resize left:50:0

# super + shift + k: resize window top
cmd + ctrl + alt + shift - k : /opt/homebrew/bin/yabai -m window --resize top:0:-50; /opt/homebrew/bin/yabai -m window --resize bottom:0:-50

# super + shift + h: resize window bottom
cmd + ctrl + alt + shift - h : /opt/homebrew/bin/yabai -m window --resize bottom:0:50; /opt/homebrew/bin/yabai -m window --resize top:0:50

# super + f: toggle window fullscreen
cmd + ctrl + alt - f : /opt/homebrew/bin/yabai -m window --toggle native-fullscreen

# super + q: close focused window
cmd + ctrl + alt - q : /opt/homebrew/bin/bun /Users/leonsilicon/.bun/bin/ymsp close-focused-window

# super + period: focus next display
cmd + ctrl + alt - 0x2F : /opt/homebrew/bin/bun /Users/leonsilicon/.bun/bin/ymsp focus-next-display

# super + shift + period: move window to next display
f18 : /opt/homebrew/bin/bun /Users/leonsilicon/.bun/bin/ymsp move-window-to-next-display

# super + comma: focus previous display
cmd + ctrl + alt - 0x2B : /opt/homebrew/bin/bun /Users/leonsilicon/.bun/bin/ymsp focus-previous-display

# super + shift + comma: move window to previous display
f19 : /opt/homebrew/bin/bun /Users/leonsilicon/.bun/bin/ymsp move-window-to-previous-display

# super + z: minimize window
cmd + ctrl + alt - z : /opt/homebrew/bin/yabai -m window --minimize

# super + w: open Warp Terminal
cmd + ctrl + alt - w : open -a /Applications/Warp.app

# super + shift + w: open Warp Terminal in a new window
cmd + ctrl + alt + shift - w : open -na /Applications/Warp.app

# super + b: open Qutebrowser
cmd + ctrl + alt - b : open -na /Applications/Qutebrowser.app
